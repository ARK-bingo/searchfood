<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personbackground2"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/try2">

        <RelativeLayout

            android:layout_width="300dp"
            android:layout_height="500dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_head"
                android:layout_width="33dp"
                android:layout_height="37dp"
                android:layout_alignBottom="@+id/tv_head"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="-5dp"
                android:src="@drawable/history" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_name"
                android:layout_width="33dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/iv_head"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_marginBottom="-3dp"
                android:src="@drawable/star3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brith"
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/iv_name"
                android:layout_alignBottom="@+id/tv_brith"
                android:layout_marginBottom="-3dp"
                android:src="@drawable/friend2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_sex"
                android:layout_width="33dp"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/iv_brith"
                android:layout_alignBottom="@+id/tv_sex"
                android:layout_marginBottom="-5dp"
                android:src="@drawable/person" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_location"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:layout_alignStart="@+id/iv_sex"
                android:layout_alignBottom="@+id/tv_location"
                android:layout_marginLeft="-3dp"
                android:layout_marginBottom="-5dp"
                android:src="@drawable/location" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_sign"
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/iv_sex"
                android:layout_alignBottom="@+id/tv_sign"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="-5dp"
                android:src="@drawable/feedback" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_head"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:text="  头像"
                android:textColor="#ff666666"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_head"
                android:layout_alignStart="@+id/tv_head"
                android:layout_marginTop="22dp"
                android:text="  昵称"
                android:textColor="#ff666666"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_brith"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="22dp"
                android:text="  生日"
                android:textColor="#ff666666"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sex"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brith"
                android:layout_alignStart="@+id/tv_brith"
                android:layout_marginTop="22dp"
                android:text="  性别"
                android:textColor="#ff666666"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_location"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sex"
                android:layout_alignStart="@+id/tv_sex"
                android:layout_marginTop="22dp"
                android:text="  地区"
                android:textColor="#ff666666"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sign"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_location"
                android:layout_alignStart="@+id/tv_sex"
                android:layout_marginTop="22dp"
                android:text="  个性签名"
                android:textColor="#ff666666"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/iv_name2"
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="-4dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/iv_brith2"
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:layout_alignBottom="@+id/tv_brith"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="-4dp"
                android:text="YYYY/MM/DD"
                android:textAlignment="center"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/iv_locationin"
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:layout_alignBottom="@+id/tv_location"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="-4dp"
                android:text="默认地址"
                android:textAlignment="center"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/iv_sex2"
                android:layout_width="50dp"
                android:layout_height="37dp"
                android:layout_alignBottom="@+id/tv_sex"
                android:layout_alignParentRight="true"
                android:layout_marginRight="64dp"
                android:layout_marginBottom="-7dp"
                android:text="男"
                android:textAlignment="center"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/iv_information"
                android:layout_width="250dp"
                android:layout_height="37dp"
                android:layout_alignBottom="@+id/tv_sign"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="-46dp"
                android:text="无"
                android:textAlignment="center"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>